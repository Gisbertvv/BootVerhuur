<Window x:Class="BootVerhuurWpf.Temp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BootVerhuurWpf"
        mc:Ignorable="d"
          Title="Temp" WindowState="Maximized">
    <Grid  VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="8*"/>

        </Grid.ColumnDefinitions>

        <StackPanel x:Name="LayoutRoot" VerticalAlignment="Center">

            <Button x:Name="btn2" Content="Schademelden"
                    Click="AccidentReport" ClickMode="Press"/>
            <Button x:Name="btn4" Content="Terug"
                    Click="Back_Click" ClickMode="Press"/>
            <Button x:Name="btn5" Content="Uitloggen"
                    Click="Logout"/>
        </StackPanel>
        <StackPanel Grid.Column="2">

            <DataGrid Name="Boats" Height="300" AutoGenerateColumns="True" Margin="10" MouseDoubleClick="selectedboat"/>
        </StackPanel>
    </Grid>
</Window>
